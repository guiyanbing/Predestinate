<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include layout="@layout/base_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/paylist_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/px35_dp"
                android:text="购买：60钻石"
                android:textColor="@color/text_ciyao_gray"
                android:textSize="@dimen/px45_sp" />


            <View style="@style/divider_line" />

            <TextView
                style="@style/divider_area_item"
                android:text="选择支付方式" />

            <View style="@style/divider_line" />
            <LinearLayout
                android:id="@+id/paytype_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <TextView
                android:id="@+id/pay_help"
                style="@style/text_pay_help"
                android:layout_marginTop="@dimen/px24_dp"
                android:layout_gravity="center"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/px90_dp"
                android:background="@color/white"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:background="@color/bg_color"
                    android:paddingBottom="10dip"
                    android:paddingLeft="15dip"
                    android:paddingRight="12dip"
                    android:paddingTop="10dip"
                    android:text="充值疑难解答："
                    android:textColor="@color/pay_txt_color"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dip"
                    android:layout_marginLeft="8dip"
                    android:layout_marginRight="8dip"
                    android:layout_marginTop="12dip"
                    android:background="@color/bg_color"
                    android:lineSpacingExtra="3dip"
                    android:paddingBottom="6dip"
                    android:paddingLeft="6dip"
                    android:paddingRight="6dip"
                    android:paddingTop="6dip"
                    android:text="@string/help_explain"
                    android:textColor="@color/pay_txt_color"
                    android:textScaleX="1.0"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="3dip"
                    android:paddingBottom="1dip"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingTop="6dip"
                    android:text="银行卡充值已经准确的填写了相关信息，还是失败怎么办?"
                    android:textColor="@color/pay_txt_color"
                    android:textScaleX="1.0"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:text="充值卡充值失败怎么办?"
                        android:textColor="@color/pay_txt_color"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/paylist_help"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="更多常见问题"
                        android:textColor="#2f6ed6"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/paylist_help_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dip"
                    android:layout_marginRight="12dip"
                    android:layout_marginTop="10dip"
                    android:lineSpacingExtra="1dip"
                    android:paddingBottom="4dip"
                    android:text="@string/help_footer_explain"
                    android:textColor="@color/pay_txt_color"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dip"
                    android:layout_marginRight="12dip"
                    android:layout_marginTop="25dip"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/paylist_qq"
                        android:layout_width="match_parent"
                        android:layout_height="35dip"
                        android:layout_marginRight="10dip"
                        android:background="@drawable/monthly_letter_item_pay_selector"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/help_chat_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dip"
                            android:text="充值客服"
                            android:textColor="@color/white"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="8dip"
                        android:text=""
                        android:textColor="@color/text_gray"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>