<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_FFF2E2"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_info_one"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px100_dp"
        android:gravity="center_vertical"
        android:text="妄自"
        android:textColor="@color/lmarquee_nick"
        android:textSize="@dimen/px40_sp" />

    <TextView
        android:id="@+id/txt_info_two"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px100_dp"
        android:layout_marginLeft="@dimen/px10_dp"
        android:gravity="center_vertical"
        android:text=" 刚刚给 "
        android:textColor="@color/color_999999"
        android:textSize="@dimen/px40_sp" />

    <TextView
        android:id="@+id/txt_info_three"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px100_dp"
        android:layout_marginLeft="@dimen/px10_dp"
        android:gravity="center_vertical"
        android:text="药剂女"
        android:textColor="@color/lmarquee_nick"
        android:textSize="@dimen/px40_sp" />

    <TextView
        android:id="@+id/txt_info_four"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px100_dp"
        android:layout_marginLeft="@dimen/px10_dp"
        android:gravity="center_vertical"
        android:text="送了"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/px40_sp" />

    <TextView
        android:id="@+id/txt_info_five"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px100_dp"
        android:layout_marginLeft="@dimen/px10_dp"
        android:gravity="center_vertical"
        android:text="1个玫瑰花"
        android:textColor="@color/lmarquee_boy_gift"
        android:textSize="@dimen/px40_sp" />
</LinearLayout>