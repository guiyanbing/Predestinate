<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/px39_dp"
    android:paddingLeft="@dimen/px39_dp"
    android:paddingRight="@dimen/px84_dp"
    android:paddingTop="@dimen/px39_dp">

    <RelativeLayout
        android:layout_width="@dimen/px240_dp"
        android:layout_height="@dimen/px240_dp"
        android:background="@drawable/p1_album_directory_bg">

        <ImageView
            android:id="@+id/iv_directory_pic"
            android:layout_width="@dimen/px229_dp"
            android:layout_height="@dimen/px229_dp"
            android:background="@drawable/ic_launcher" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/px36_dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingRight="@dimen/px36_dp">

        <TextView
            android:id="@+id/tv_directory_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/text_zhuyao_black"
            android:textSize="@dimen/px48_sp" />

        <TextView
            android:id="@+id/tv_directory_nums"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px33_dp"
            android:textColor="@color/text_ciyao_gray"
            android:textSize="@dimen/px42_sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_directory_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/p1_album_directory_arrow"
        android:visibility="invisible" />

</LinearLayout>