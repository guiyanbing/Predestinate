<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:orientation="vertical">

    <View
        style="@style/divider_line"
        android:background="@color/color_dddddd" />

    <com.juxin.predestinate.module.logic.baseui.custom.HorizontalListView
        android:id="@+id/chat_smile_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px108_dp"
        android:paddingLeft="@dimen/px15_dp"
        android:paddingRight="@dimen/px15_dp">

    </com.juxin.predestinate.module.logic.baseui.custom.HorizontalListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px540_dp"
        android:orientation="vertical"
        android:visibility="visible">

        <FrameLayout
            android:id="@+id/chat_smile_package_layouts"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <View
            style="@style/divider_line"
            android:visibility="gone"
            android:background="@color/color_dddddd" />
    </LinearLayout>
</LinearLayout>
