<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/common_net_error"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/error_img"
            style="@style/icon_huge_tip"
            android:src="@drawable/p1_net_error" />

        <TextView
            android:id="@+id/error_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px70_dp"
            android:gravity="center"
            android:text="@string/tip_net_error"
            android:textColor="@color/color_5A5A5A"
            android:textSize="@dimen/px48_sp" />

        <TextView
            android:id="@+id/error_btn"
            style="@style/button_big"
            android:layout_margin="@dimen/px100_dp"
            android:text="@string/tip_click_refresh" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>