<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/px300_dp"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px300_dp"
        android:background="@drawable/p1_chat_invite_bg"
        android:paddingBottom="1px"
        android:paddingLeft="9dp"
        android:paddingRight="1px"
        android:paddingTop="1px">

        <LinearLayout
            android:id="@+id/ll_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/px30_dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_invite_img"
                android:layout_width="@dimen/px150_dp"
                android:layout_height="@dimen/px150_dp"
                android:scaleType="fitCenter"
                android:src="@drawable/p1_ltlx01" />

            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px15_dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_invite_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/px15_dp"
                    android:text="@string/invite_video"
                    android:textColor="@color/white"
                    android:textSize="@dimen/px46_sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_invite_tv_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/px15_dp"
                        android:singleLine="true"
                        android:text="@string/video_cost"
                        android:textColor="@color/color_D1ECFF"
                        android:textSize="@dimen/px28_sp" />
                    <TextView
                        android:id="@+id/tv_invite_tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/px5_dp"
                        android:singleLine="true"
                        android:text="60s"
                        android:textColor="@color/color_D1ECFF"
                        android:textSize="@dimen/px28_sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px104_dp"
            android:orientation="horizontal"
            android:layout_below="@+id/ll_container"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/px12_dp"
            android:gravity="center_vertical">
            <LinearLayout
                android:id="@+id/ll_invite_reject"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/px46_dp"
                    android:layout_height="@dimen/px46_dp"
                    android:layout_marginLeft="@dimen/px50_dp"
                    android:background="@drawable/p1_ltbtn01"/>
                <TextView
                    android:id="@+id/tv_invite_tv_reject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/px20_dp"
                    android:layout_marginLeft="@dimen/px20_dp"
                    android:text="拒绝接收"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/px36_sp" />
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/ll_invite_connect"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/px46_dp"
                    android:layout_height="@dimen/px46_dp"
                    android:layout_marginLeft="@dimen/px50_dp"
                    android:background="@drawable/p1_ltbtn02"/>
                <TextView
                    android:id="@+id/tv_invite_tv_connect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px20_dp"
                    android:layout_marginRight="@dimen/px30_dp"
                    android:text="@string/connect"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/px36_sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>