<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/ll_vip"
        style="@style/center_pieces_item">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/px36_dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px10_dp"
                android:text="@string/bt_privilege_vip"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/px36_sp" />

            <ImageView
                style="@style/icon_big"
                android:background="@drawable/f1_user_vip_sel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px10_dp"
                android:text="@string/bt_privilege_under"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/px36_sp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/px18_dp"
        android:layout_marginBottom="@dimen/px18_dp"
        android:background="@color/fengexian_gray" />

    <RelativeLayout
        android:id="@+id/ll_wallet"
        style="@style/center_pieces_item">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/px36_dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px10_dp"
                android:text="@string/bt_auth_phone"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/px36_sp" />

            <ImageView
                style="@style/icon_big"
                android:src="@drawable/f1_user_phone_selector" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px10_dp"
                android:text="@string/bt_auth_take"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/px36_sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>