<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_baseconfirm_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px60_dp"
        android:text="发现新版本 v2.0"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/px48_sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/update_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/px45_dp"
            android:text="1.小友版面全面更新，红包让你抢到手发软\n\n2.好玩又有趣的宠物养成计划，陪你一起玩耍一起战斗，让你嗨翻天！\n\n3.立即升级和女神一起抢红包养宠物"
            android:textColor="@color/text_ciyao_gray"
            android:textSize="@dimen/px39_sp" />
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_dddddd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px120_dp">

        <TextView
            android:id="@+id/update_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:text="下次再说"
            android:textColor="@color/text_ciyao_gray"
            android:textSize="@dimen/px42_sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_dddddd" />

        <TextView
            android:id="@+id/update_submit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="立即更新"
            android:textColor="@color/text_theme_blue"
            android:textSize="@dimen/px42_sp" />
    </LinearLayout>
</LinearLayout>