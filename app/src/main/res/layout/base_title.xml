<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/base_title_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_footer_height"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/base_title_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/px35_dp"
            android:paddingRight="@dimen/px35_dp"
            android:visibility="gone">

            <ImageView
                style="@style/icon_small"
                android:src="@drawable/p1_back_btn" />

            <TextView
                android:id="@+id/base_title_view_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px12_dp"
                android:text="@string/base_title_back"
                android:textColor="@color/color_zhuyao"
                android:textSize="@dimen/px42_sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/base_title_left_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone" />

        <TextView
            android:id="@+id/base_title_left_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/px35_dp"
            android:text="@null"
            android:textColor="@color/color_zhuyao"
            android:textSize="@dimen/px48_sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/base_title_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:maxEms="7"
            android:maxLines="1"
            android:textColor="@color/color_zhuyao"
            android:textSize="@dimen/px52_sp" />

        <com.juxin.library.unread.BadgeView
            android:id="@+id/base_title_badge_view"
            style="@style/badge_num_big"
            android:layout_marginLeft="-3dip"
            android:layout_marginTop="@dimen/px15_dp"
            android:layout_toRightOf="@id/base_title_title"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/base_title_center_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/base_title_right_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingLeft="@dimen/px35_dp"
            android:paddingRight="@dimen/px35_dp"
            android:text="@null"
            android:textColor="@color/text_theme_blue"
            android:textSize="@dimen/px48_sp" />

        <LinearLayout
            android:id="@+id/base_title_right_img_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/px15_dp"
            android:gravity="center"
            android:paddingLeft="@dimen/px40_dp"
            android:paddingRight="@dimen/px20_dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/base_title_right_img"
                android:layout_width="@dimen/px70_dp"
                android:layout_height="@dimen/px70_dp"
                android:scaleType="fitXY" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/base_title_right_img_text_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/px20_dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/px15_dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/base_title_right_img_view"
                style="@style/icon_small"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/base_title_right_img_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px10_dp"
                android:textColor="@color/color_ciyao"
                android:textSize="@dimen/px45_sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/base_title_left_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/px35_dp"
            android:paddingRight="@dimen/px35_dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/base_title_left_img"
                style="@style/icon_middle"
                android:scaleType="centerInside"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_zhuyao"
                android:textSize="@dimen/px42_sp"
                android:visibility="invisible" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/cut_line"
        style="@style/divider_line" />
</LinearLayout>