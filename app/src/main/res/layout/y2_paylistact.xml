<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include layout="@layout/base_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTop"
            android:orientation="vertical">

            <View style="@style/divider_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/px60_dp"
                android:paddingLeft="@dimen/px45_dp"
                android:paddingRight="@dimen/px45_dp"
                android:paddingTop="@dimen/px60_dp">

                <ImageView
                    android:id="@+id/paylist_title_icon"
                    android:layout_width="@dimen/px120_dp"
                    android:layout_height="@dimen/px120_dp"
                    android:gravity="center_vertical"
                    android:src="@drawable/default_head"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px70_dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/paylist_title_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="购买：60钻石"
                        android:textColor="@color/text_ciyao_gray"
                        android:textSize="@dimen/px45_sp" />

                    <TextView
                        android:id="@+id/paylist_title_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/px20_dp"
                        android:text="付款：10元"
                        android:textColor="@color/text_ciyao_gray"
                        android:textSize="@dimen/px45_sp" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/divider_line" />

            <TextView
                style="@style/divider_area_item"
                android:text="选择支付方式" />

            <View style="@style/divider_line" />
            <LinearLayout
                android:id="@+id/paytype_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

            <TextView
                android:id="@+id/pay_help"
                style="@style/text_pay_help"
                android:layout_marginTop="@dimen/px24_dp"
                android:layout_gravity="center"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/pay_qq"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px150_dp"
                android:layout_marginBottom="@dimen/divider_page_footing"
                android:background="@drawable/list_item_selector"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/px72_dp"
                    android:layout_height="@dimen/px72_dp"
                    android:src="@null"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px20_dp"
                    android:text="QQ咨询客服"
                    android:textColor="@color/color_56aff3"
                    android:textSize="@dimen/px45_sp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>