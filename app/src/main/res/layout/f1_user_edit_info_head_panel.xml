<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/edit_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px604_dp"
        android:background="@color/picker_pink_color">

        <!-- 头部背景 -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/f1_user_info_head_bg" />

        <LinearLayout
            android:id="@+id/edit_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <!-- 头像 -->
            <com.juxin.library.view.CircleImageView
                android:id="@+id/img_header"
                android:layout_width="@dimen/px360_dp"
                android:layout_height="@dimen/px360_dp"
                android:layout_marginTop="@dimen/px100_dp"
                android:src="@drawable/default_head"
                app:border_color="@color/white"
                app:border_width="@dimen/px6_dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/px35_dp"
                    android:text="ID:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/px43_sp" />

                <ImageView
                    android:id="@+id/img_vip"
                    android:layout_width="@dimen/px42_dp"
                    android:layout_height="@dimen/px42_dp"
                    android:layout_marginLeft="@dimen/px10_dp"
                    android:src="@drawable/p1_vip_ico"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <!-- 性别，年龄 身高 地址等基础信息-->
    <LinearLayout
        android:id="@+id/ll_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_header"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/px30_dp">

        <TextView
            android:id="@+id/user_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_middle_gray"
            android:textSize="@dimen/px39_sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" , "
            android:textColor="@color/text_middle_gray"
            android:textSize="@dimen/px39_sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_middle_gray"
            android:textSize="@dimen/px39_sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" , "
            android:textColor="@color/text_middle_gray"
            android:textSize="@dimen/px39_sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_middle_gray"
            android:textSize="@dimen/px39_sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" , "
            android:textColor="@color/text_middle_gray"
            android:textSize="@dimen/px39_sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_province"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_middle_gray"
            android:textSize="@dimen/px39_sp" />
    </LinearLayout>
</RelativeLayout>