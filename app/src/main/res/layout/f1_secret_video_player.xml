<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:gravity="center">

            <com.juxin.predestinate.module.logic.baseui.custom.TextureVideoView
                android:id="@+id/tvv_photo_video_player"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/iv_photo_video_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/default_pic"
                android:visibility="gone" />

            <com.juxin.library.view.DownloadProgressView
                android:id="@+id/progress_bar_photo_view"
                android:layout_width="@dimen/px120_dp"
                android:layout_height="@dimen/px120_dp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                app:progressColor="@color/half_trans_white"
                app:shapeType="circle" />

            <ImageView
                android:id="@+id/iv_photo_video_start"
                android:layout_width="@dimen/px240_dp"
                android:layout_height="@dimen/px240_dp"
                android:layout_centerInParent="true"
                android:src="@drawable/f1_secret_video_play_white" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_photo_view_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/px35_dp"
            android:layout_marginTop="@dimen/px35_dp"
            android:background="@drawable/p1_back_white_btn" />
    </RelativeLayout>

</LinearLayout>
