<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/px720_dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_radius_while"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/px720_dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <ImageButton
                android:id="@+id/btn_close"
                android:layout_width="@dimen/px60_dp"
                android:layout_height="@dimen/px60_dp"
                android:layout_marginRight="@dimen/px20_dp"
                android:layout_marginTop="@dimen/px20_dp"
                android:background="@drawable/f1_close_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title_tips"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/user_info_check_video_pay"
                android:textColor="@color/black"
                android:textSize="@dimen/px42_sp" />

            <TextView
                android:id="@+id/tv_gift_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="10朵玫瑰"
                android:textColor="@color/pink"
                android:textSize="@dimen/px42_sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_gift_pic"
            android:layout_width="@dimen/px230_dp"
            android:layout_height="@dimen/px230_dp"
            android:layout_margin="@dimen/px45_dp"
            android:src="@drawable/default_pic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/px10_dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/px60_dp"
                android:layout_height="@dimen/px60_dp"
                android:layout_marginRight="@dimen/px15_dp"
                android:background="@drawable/f1_diamonds_gray" />

            <TextView
                android:id="@+id/tv_gift_diamonds"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="100"
                android:textColor="@color/color_C7C7C7"
                android:textSize="@dimen/px45_sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/px30_dp"
        android:background="@color/divider" />

    <TextView
        android:id="@+id/tv_send"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center"
        android:text="@string/user_info_check_video_send"
        android:textColor="@color/pink"
        android:textSize="@dimen/px42_sp" />
</LinearLayout>