<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_video_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/px30_dp"
        android:layout_marginTop="@dimen/px30_dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/iv_play_icon"
        android:layout_width="@dimen/px45_dp"
        android:layout_height="@dimen/px45_dp"
        android:layout_alignBottom="@id/iv_video_preview"
        android:layout_alignRight="@id/iv_video_preview"
        android:layout_marginBottom="@dimen/px15_dp"
        android:layout_marginRight="@dimen/px15_dp"
        android:src="@drawable/f1_user_secret_video_play_white" />

    <ImageView
        android:id="@+id/iv_hot_icon"
        android:layout_width="@dimen/px30_dp"
        android:layout_height="@dimen/px30_dp"
        android:layout_alignLeft="@id/iv_video_preview"
        android:layout_alignTop="@id/iv_video_preview"
        android:layout_marginLeft="@dimen/px15_dp"
        android:layout_marginTop="@dimen/px15_dp"
        android:src="@drawable/f1_user_secret_video_look_white" />

    <TextView
        android:id="@+id/tv_hot_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_hot_icon"
        android:layout_alignTop="@id/iv_hot_icon"
        android:layout_marginLeft="@dimen/px6_dp"
        android:layout_toRightOf="@id/iv_hot_icon"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/tv_video_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_video_preview"
        android:layout_alignLeft="@id/iv_video_preview"
        android:layout_alignTop="@id/iv_play_icon"
        android:layout_marginBottom="@dimen/px15_dp"
        android:layout_marginLeft="@dimen/px15_dp"
        android:gravity="center"
        android:text="00:00"
        android:textColor="@color/white"
        android:textSize="8sp" />
</RelativeLayout>