<?xml version="1.0" encoding="utf-8"?>
<com.juxin.library.view.CustomFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/px60_dp"
        android:layout_marginRight="@dimen/px60_dp"
        android:background="@drawable/tm_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/px30_dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/px55_dp"
                android:layout_height="@dimen/px55_dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/ic_launcher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@+id/icon"
                android:text="小友消息"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/wake_lock_off"
                android:layout_width="@dimen/px80_dp"
                android:layout_height="@dimen/px80_dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/p1_ic_edit_del" />
        </RelativeLayout>

        <TextView
            android:id="@+id/wake_lock_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px45_dp"
            android:singleLine="true"
            android:text="HELLO美女"
            android:textColor="@color/theme_color_red"
            android:textSize="@dimen/px36_sp" />

        <TextView
            android:id="@+id/wake_lock_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px24_dp"
            android:maxLines="2"
            android:text="这么晚还忙些什么"
            android:textColor="@color/white"
            android:textSize="@dimen/px36_sp" />

        <View
            android:id="@+id/wake_lock_line"
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_marginBottom="@dimen/px15_dp"
            android:layout_marginTop="@dimen/px45_dp"
            android:background="#a7a7a7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/wake_lock_content"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px9_dp"
                android:layout_weight="1"
                android:background="#a7a7a7"
                android:hint="回复："
                android:padding="@dimen/px9_dp"
                android:textSize="@dimen/px42_sp" />

            <TextView
                android:id="@+id/wake_lock_send"
                style="@style/button_small"
                android:background="@color/transparent"
                android:text="发送"
                android:textColor="@color/white"
                android:textSize="@dimen/px42_sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/px60_dp"
        android:layout_marginRight="@dimen/px60_dp"
        android:background="@drawable/tm_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/px30_dp"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/palpitation_icon"
                android:layout_width="@dimen/px155_dp"
                android:layout_height="@dimen/px155_dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/palpitation_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px15_dp"
                android:layout_marginTop="@dimen/px15_dp"
                android:layout_toRightOf="@+id/palpitation_icon"
                android:singleLine="true"
                android:text="HELLO美女"
                android:textColor="#FC615C"
                android:textSize="@dimen/px39_sp" />

            <TextView
                android:id="@+id/palpitation_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/palpitation_nickname"
                android:layout_marginLeft="@dimen/px15_dp"
                android:layout_marginTop="@dimen/px30_dp"
                android:layout_toRightOf="@+id/palpitation_icon"
                android:maxLines="2"
                android:text="这么晚还忙些什么"
                android:textColor="@color/white"
                android:textSize="@dimen/px39_sp" />

            <ImageView
                android:id="@+id/palpitation_close"
                android:layout_width="@dimen/px80_dp"
                android:layout_height="@dimen/px80_dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/p1_ic_edit_del" />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_marginBottom="@dimen/px15_dp"
            android:layout_marginTop="@dimen/px45_dp"
            android:background="#a7a7a7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/palpitation_edit"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px9_dp"
                android:layout_weight="1"
                android:background="#a7a7a7"
                android:padding="@dimen/px9_dp"
                android:textSize="@dimen/px42_sp" />

            <TextView
                android:id="@+id/palpitation_send"
                style="@style/button_small"
                android:text="发送" />
        </LinearLayout>
    </LinearLayout>
</com.juxin.library.view.CustomFrameLayout>