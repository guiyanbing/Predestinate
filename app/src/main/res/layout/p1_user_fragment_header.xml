<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- 提示条 -->
    <LinearLayout
        android:id="@+id/tips_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <View style="@style/divider_line" />

    <LinearLayout
        android:id="@+id/ll_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_head"
            style="@style/avatar_big"
            android:layout_margin="@dimen/px35_dp"
            android:src="@drawable/default_pic" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/rl_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="用户昵称"
                    android:textColor="#333333"
                    android:textSize="@dimen/px42_sp" />

                <ImageView
                    android:id="@+id/user_vip_status"
                    android:layout_width="@dimen/px42_dp"
                    android:layout_height="@dimen/px42_dp"
                    android:layout_marginLeft="@dimen/px10_dp"
                    android:src="@drawable/p1_vip_ico" />
            </LinearLayout>

            <TextView
                android:id="@+id/user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_nick"
                android:text="ID:89847"
                android:textColor="@color/text_ciyao_gray"
                android:textSize="@dimen/px39_sp" />

            <TextView
                android:id="@+id/user_vip_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_id"
                android:text="VIP截止到..."
                android:textColor="@color/text_ciyao_gray"
                android:textSize="@dimen/px38_sp" />

            <ImageView
                style="@style/right_go"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/px15_dp"
                android:layout_marginRight="@dimen/px35_dp" />

        </RelativeLayout>
    </LinearLayout>

    <View style="@style/divider_line" />

    <!-- 功能panel -->
    <LinearLayout
        android:id="@+id/function_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

</LinearLayout>