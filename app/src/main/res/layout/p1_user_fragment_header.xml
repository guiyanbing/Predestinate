<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/layout_margintop" />

    <!-- 提示条 -->
    <LinearLayout
        android:id="@+id/tips_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_head"
            style="@style/avatar_big"
            android:layout_margin="@dimen/px35_dp"
            android:src="@drawable/default_pic" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px250_dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/rl_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px35_dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="用户昵称"
                    android:textColor="#333333"
                    android:textSize="@dimen/px48_sp" />

                <TextView
                    android:id="@+id/user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px30_dp"
                    android:text="ID:10063"
                    android:textColor="@color/text_ciyao_gray"
                    android:textSize="@dimen/px39_sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px84_dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/px35_dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/invite_code"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/f1_center_invitecode_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/px39_dp"
                    android:paddingRight="@dimen/px30_dp"
                    android:text="@string/user_fragment_header_invCode"
                    android:textColor="#8ea8ed"
                    android:textSize="@dimen/px36_sp" />

                <TextView
                    android:id="@+id/code_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/f1_center_codecopy_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/px30_dp"
                    android:paddingRight="@dimen/px39_dp"
                    android:text="@string/user_fragment_header_copy"
                    android:textColor="@color/white"
                    android:textSize="@dimen/px36_sp" />
            </LinearLayout>

            <ImageView
                style="@style/right_go"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/px15_dp"
                android:layout_marginRight="@dimen/px35_dp" />

        </RelativeLayout>
    </LinearLayout>

    <View style="@style/divider_line" />

    <!-- 功能panel -->
    <LinearLayout
        android:id="@+id/function_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <include layout="@layout/layout_margintop" />

</LinearLayout>