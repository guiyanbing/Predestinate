<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/act_space">

        <ImageView
            android:id="@+id/iv_head"
            style="@style/avatar_small"
            android:src="@drawable/ic_launcher" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px20_dp"
            android:layout_toRightOf="@+id/iv_head">

            <RelativeLayout
                android:id="@+id/rl_nickname_mark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_nickname"
                    style="@style/txt_item_nickname"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:id="@+id/iv_identity"
                    android:layout_width="@dimen/px50_dp"
                    android:layout_height="@dimen/px50_dp"
                    android:layout_alignTop="@+id/tv_online_time"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px15_dp"
                    android:layout_toEndOf="@+id/tv_nickname"
                    android:layout_toRightOf="@+id/tv_nickname"
                    android:src="@drawable/p1_vip_ico" />

                <TextView
                    android:id="@+id/tv_online_time"
                    style="@style/txt_item_introduction"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="99分钟前" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_introduction"
                style="@style/txt_item_introduction"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/rl_nickname_mark"
                android:text="99岁/999cm/北京" />

            <TextView
                android:id="@+id/tv_sign"
                style="@style/text_middle"
                android:layout_below="@+id/tv_introduction"
                android:maxEms="3"
                android:maxLines="1"
                android:text="这家伙很懒，什么也没写"
                android:textColor="@color/txt_item_sign" />
        </RelativeLayout>


    </RelativeLayout>

    <include layout="@layout/p1_greet_itemfoot" />

</LinearLayout>