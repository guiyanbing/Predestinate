<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/px34_sp" />

    <ImageView
        android:id="@+id/img_pic"
        android:layout_width="@dimen/px108_dp"
        android:layout_height="@dimen/px108_dp"
        android:layout_marginTop="@dimen/px3_dp" />

    <TextView
        android:id="@+id/txt_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px9_dp"
        android:gravity="center"
        android:textColor="#66FFFFFF"
        android:textSize="@dimen/px39_sp" />
</LinearLayout>