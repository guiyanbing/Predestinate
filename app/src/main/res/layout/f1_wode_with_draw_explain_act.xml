<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F0F2F2"
    android:orientation="vertical">

    <include layout="@layout/base_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/px45_dp"
        android:paddingLeft="@dimen/px45_dp"
        android:paddingRight="@dimen/px45_dp"
        android:layout_marginTop="@dimen/px60_dp">

        <TextView
            android:id="@+id/tv_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/px3_dp"
            android:text="1"
            android:textSize="@dimen/px42_sp"
            android:textColor="@color/color_D6CAAA"
            android:background="@drawable/f1_shape_gray_ring"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_one"
            android:layout_marginLeft="@dimen/px30_dp"
            android:textSize="@dimen/px42_sp"
            android:textColor="@color/color_727171"
            android:text="@string/withdrawal_instructions_one"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/px45_dp"
        android:paddingRight="@dimen/px45_dp"
        android:layout_marginTop="@dimen/px60_dp">

        <TextView
            android:id="@+id/tv_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/px3_dp"
            android:text="2"
            android:textSize="@dimen/px42_sp"
            android:textColor="@color/color_D6CAAA"
            android:background="@drawable/f1_shape_gray_ring"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_three"
            android:layout_marginLeft="@dimen/px30_dp"
            android:textSize="@dimen/px42_sp"
            android:textColor="@color/color_727171"
            android:text="@string/withdrawal_instructions_three"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/px45_dp"
        android:paddingRight="@dimen/px45_dp"
        android:paddingBottom="@dimen/px45_dp"
        android:layout_marginTop="@dimen/px60_dp">

        <TextView
            android:id="@+id/tv_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/px3_dp"
            android:text="3"
            android:textSize="@dimen/px42_sp"
            android:textColor="@color/color_D6CAAA"
            android:background="@drawable/f1_shape_gray_ring"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_four"
            android:layout_marginLeft="@dimen/px30_dp"
            android:textSize="@dimen/px42_sp"
            android:textColor="@color/color_727171"
            android:text="@string/withdrawal_instructions_four"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|right">

        <ImageView
            android:id="@+id/wode_with_vip_kf"
            android:layout_width="104dp"
            android:layout_height="46dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/f1_ic_recharge_consult" />
    </LinearLayout>
</LinearLayout>