<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/px216_dp"
        android:layout_height="match_parent"
        android:background="@drawable/list_item_selector"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/chat_smile"
            android:layout_width="@dimen/px170_dp"
            android:layout_height="@dimen/px170_dp"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/chat_smile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px15_dp"
            android:text="表情"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/px30_sp" />
    </LinearLayout>
</LinearLayout>