<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/base_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pink1"
        android:paddingBottom="10dp"
        android:paddingEnd="5dp"
        android:paddingLeft="0dp"
        android:paddingRight="5dp"
        android:paddingStart="0dp"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/iv_phoneverify_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/img_verify_girl_des"
            android:src="@drawable/f1_near_visitor_laifang_big" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/f1_help_explain"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_verify_tip_up"
                android:textColor="@color/hei_color" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/txt_verify_tip_down"
                android:textColor="@color/hei_color" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/filter_tab_bottom_line" />

    <LinearLayout
        android:id="@+id/lly_phoneverify_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/txt_phone_desc"
            android:textColor="@color/gray_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_phoneverify_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/f1_edt_phone_selector"
                android:ems="10"
                android:hint="@string/ext_phone_hit"
                android:inputType="phone"
                android:maxLength="11"
                android:padding="10dp" />

            <Button
                android:id="@+id/btn_phoneverify_begin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/f1_button_big_bg"
                android:padding="10dp"
                android:text="@string/bt_send_code_normal"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

        <EditText
            android:id="@+id/edt_phoneverify_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/f1_edt_phone_selector"
            android:ems="10"
            android:hint="@string/ext_verifycode_hit"
            android:lines="1"
            android:padding="10dp"
            android:maxLines="1"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_phoneverify_ok"
            style="@style/button_big"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:text="@string/bt_verify" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lly_phoneverify_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/txt_phoneverify_desc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/txt_sendmsg_tip"
            android:textColor="@color/gray_text" />

        <TextView
            android:id="@+id/txt_phoneverify_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:text="@string/txt_phoneverify_hit"
            android:textColor="@color/main_bottom_text_color_sel"
            android:textSize="16sp" />

    </LinearLayout>


</LinearLayout>