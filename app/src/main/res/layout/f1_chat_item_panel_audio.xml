<?xml version="1.0" encoding="utf-8"?>
<com.juxin.library.view.CustomFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_video_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/px30_dp">

    <LinearLayout
        android:id="@+id/ll_chat_video_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_type_left"
            android:layout_width="@dimen/px60_dp"
            android:layout_height="@dimen/px60_dp"
            android:src="@drawable/f1_chat_voice_left" />

        <TextView
            android:id="@+id/tv_text_left"
            style="@style/chat_item_text_content"
            android:layout_marginLeft="@dimen/px30_dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_chat_video_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_text_right"
            style="@style/chat_item_text_content"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/iv_type_right"
            android:layout_width="@dimen/px60_dp"
            android:layout_height="@dimen/px60_dp"
            android:layout_marginLeft="@dimen/px30_dp"
            android:src="@drawable/f1_chat_voice_left" />
    </LinearLayout>
</com.juxin.library.view.CustomFrameLayout>
