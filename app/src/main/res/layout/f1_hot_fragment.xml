<?xml version="1.0" encoding="utf-8"?>
<com.juxin.library.view.CustomFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hot_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">

    <include layout="@layout/f1_hot_card_nodata" />

    <LinearLayout
        android:id="@+id/hot_card_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.juxin.predestinate.ui.discover.Cards.CardsView
            android:id="@+id/hot_card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card:alphaOffsetStep="20"
            card:scaleOffsetStep="0.08"
            card:yOffsetStep="10dp" />

    </LinearLayout>


    <include layout="@layout/common_loading" />

</com.juxin.library.view.CustomFrameLayout>
