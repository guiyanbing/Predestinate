<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.juxin.predestinate.module.logic.baseui.custom.CropEndImageView
        android:id="@+id/nav_img_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_launcher"
       ></com.juxin.predestinate.module.logic.baseui.custom.CropEndImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px150_dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btn_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px120_dp"
            android:layout_marginRight="@dimen/px120_dp"
            android:background="@drawable/r1_btn_login_bg"
            android:gravity="center"
            android:padding="@dimen/px35_dp"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="@dimen/px45_sp" />

        <TextView
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px120_dp"
            android:layout_marginRight="@dimen/px120_dp"
            android:layout_marginTop="@dimen/px35_dp"
            android:background="@drawable/r1_btn_login_bg"
            android:gravity="center"
            android:padding="@dimen/px35_dp"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="@dimen/px45_sp" />
    </LinearLayout>
</RelativeLayout>