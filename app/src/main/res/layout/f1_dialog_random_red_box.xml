<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/half_trans_black"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_random_red_box_back_light"
        android:layout_width="300dp"
        android:layout_height="376dp"
        android:layout_centerInParent="true"
        android:src="@drawable/f1_random_red_box_back_light" />

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/iv_random_red_box"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/f1_random_red_box" />

        <TextView
            android:id="@+id/tv_random_red_box_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="105dp"
            android:text="@string/congratulations_to_you"
            android:textColor="@color/color_F5E37C"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_random_red_box_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_random_red_box_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:maxWidth="150dp"
            android:textColor="@color/white"
            android:textSize="10sp"
            tools:text="@string/get_a_random_red_box" />

        <Button
            android:id="@+id/btn_random_red_box_get"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_random_red_box_msg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/f1_shape_white_corner"
            android:padding="5dp"
            android:text="@string/ok"
            android:textColor="@color/color_DD3A37"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>