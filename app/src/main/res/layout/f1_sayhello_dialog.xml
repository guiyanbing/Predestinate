<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"

    android:paddingLeft="10dip"
    android:paddingRight="10dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:paddingRight="10dip">

                <ImageView
                    android:id="@+id/onkey_user_big"
                    android:layout_width="match_parent"
                    android:layout_height="200dip"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dip"
                    android:background="@drawable/default_pic"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dip"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dip"
                    android:gravity="center">

                    <com.juxin.library.view.CircleImageView
                        android:id="@+id/onkey_small"
                        android:layout_width="120dip"
                        android:layout_height="120dip"
                        android:src="@drawable/default_pic"
                        app:border_color="@color/white"
                        app:border_width="2dip" />

                </LinearLayout>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/f1_onekey_top" />


                <RelativeLayout
                    android:id="@+id/onkey_open_rl"
                    android:layout_width="330dip"
                    android:layout_height="40dip"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="220dp"
                    android:background="@color/pink"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="10dip"
                        android:paddingRight="5dip">

                        <TextView
                            android:id="@+id/onkey_open"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="一键打招呼"
                            android:textColor="@color/white"
                            android:textSize="18dip" />
                    </LinearLayout>

                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="25dip"
                android:gravity="center"
                android:text="一键给他们打招呼"
                android:textColor="#7f7f7f"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/onkey_user_small1"
                    android:layout_width="105dip"
                    android:layout_height="105dip"
                    android:src="@drawable/default_pic" />

                <View
                    android:layout_width="5dip"
                    android:layout_height="1dip" />

                <ImageView
                    android:id="@+id/onkey_user_small2"
                    android:layout_width="105dip"
                    android:layout_height="105dip"
                    android:src="@drawable/default_pic" />

                <View
                    android:layout_width="5dip"
                    android:layout_height="1dip" />

                <ImageView
                    android:id="@+id/onkey_user_small3"
                    android:layout_width="105dip"
                    android:layout_height="105dip"
                    android:src="@drawable/default_pic" />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dip"
                android:text="以上用户由系统智能为你推荐"
                android:textColor="@color/color_e6c2aa"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
