<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@drawable/f1_rank_title_bg">

        <RadioButton
            android:id="@+id/this_week"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/f1_rank_title_left"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="@string/rank_this_week"
            android:textColor="@drawable/f1_rank_title_txt"
            android:textSize="@dimen/px45_sp" />

        <RadioButton
            android:id="@+id/last_week"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/f1_rank_title_right"
            android:button="@null"
            android:gravity="center"
            android:text="@string/rank_last_week"
            android:textColor="@drawable/f1_rank_title_txt"
            android:textSize="@dimen/px45_sp" />
    </LinearLayout>
</LinearLayout>
