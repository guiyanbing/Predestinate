<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/px300_dp"
        android:layout_height="@dimen/px300_dp"
        android:background="@drawable/bg_loading_dialog"
        android:gravity="center"
        android:orientation="vertical">

        <com.juxin.library.view.DownloadProgressView
            android:id="@+id/progress_bar"
            android:layout_width="@dimen/px120_dp"
            android:layout_height="@dimen/px120_dp"
            app:max="100"
            app:progress="0"
            app:progressColor="@color/white"
            app:shapeType="circle" />

        <TextView
            android:id="@+id/loading_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px30_dp"
            android:gravity="center"
            android:text="下载中"
            android:textColor="@color/white"
            android:textSize="@dimen/px39_sp" />
    </LinearLayout>
</LinearLayout>