<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px300_dp"
        android:background="@color/bg_color"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="@dimen/px240_dp"
            android:layout_height="@dimen/px240_dp"
            android:layout_marginTop="@dimen/px150_dp">

            <ImageView
                android:id="@+id/img_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/r1_man02"
                android:clickable="true" />

            <ImageView
                android:id="@+id/img_vip"
                android:layout_width="@dimen/px80_dp"
                android:layout_height="@dimen/px80_dp"
                android:layout_alignBottom="@+id/img_header"
                android:layout_alignRight="@+id/img_header"
                android:gravity="center" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/user_alias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px150_dp"
        android:gravity="center"
        android:text="111111"
        android:textSize="@dimen/px52_sp" />

    <TextView
        android:id="@+id/user_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px20_dp"
        android:gravity="center"
        android:text="ID:22"
        android:textColor="@color/text_ciyao_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px20_dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/user_gender_img"
            android:layout_width="@dimen/px32_dp"
            android:layout_height="@dimen/px36_dp"
            android:layout_marginRight="@dimen/px15_dp"
            android:background="@drawable/networkset_img" />

        <TextView
            android:id="@+id/user_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女，"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/px36_sp" />

        <TextView
            android:id="@+id/user_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23岁，"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/px36_sp" />

        <TextView
            android:id="@+id/user_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="168cm，"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/px36_sp" />

        <TextView
            android:id="@+id/user_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京海淀区"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/px36_sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/user_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px20_dp"
        android:gravity="center"
        android:text="死亡如风，常伴吾身"
        android:textColor="@color/text_ciyao_gray"
        android:textSize="@dimen/px52_sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px20_dp">

        <TextView
            android:id="@+id/user_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/px30_dp"
            android:text="活跃，"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/px46_sp" />

        <TextView
            android:id="@+id/user_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.5km"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/px46_sp" />
    </LinearLayout>

</LinearLayout>
