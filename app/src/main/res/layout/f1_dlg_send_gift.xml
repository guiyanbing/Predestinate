<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="@drawable/f1_shape_radius_while"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <ImageButton
                android:id="@+id/tv_send_gift_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/f1_bt_close" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_paid_media_ts"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/send_gift"
                android:textColor="@color/black"
                android:textSize="@dimen/px45_sp" />

            <TextView
                android:id="@+id/tv_send_gift_diamonds"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="10个钻石"
                android:textColor="@color/pink"
                android:textSize="@dimen/px45_sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_send_gift_pic"
            android:layout_width="@dimen/px240_dp"
            android:layout_height="@dimen/px240_dp"
            android:layout_margin="@dimen/px30_dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_send_gift_my_diamonds"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="钻石余额：1111111"
                android:textColor="#c7c7c7"
                android:textSize="@dimen/px36_sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1_dp"
        android:layout_marginTop="@dimen/px15_dp"
        android:background="@color/color_F6F6F6" />

    <TextView
        android:id="@+id/btn_diamond_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px150_dp"
        android:gravity="center"
        android:text="@string/dlg_send_ok"
        android:textColor="@color/pink"
        android:textSize="@dimen/px54_dp" />
</LinearLayout>