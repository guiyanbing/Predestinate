<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/px720_dp"
    android:layout_height="wrap_content"
    android:background="@drawable/f1_shape_radius_while"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/px720_dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/tv_send_gift_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/f1_bt_close" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_paid_media_ts"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/send_gift"
                android:textColor="@color/black"
                android:textSize="@dimen/px45_sp" />

            <TextView
                android:id="@+id/tv_send_gift_diamonds"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="10个钻石"
                android:textColor="@color/pink"
                android:textSize="@dimen/px45_sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_send_gift_pic"
            android:layout_width="@dimen/px222_dp"
            android:layout_height="@dimen/px222_dp"
            android:layout_margin="@dimen/px30_dp"
            android:src="@drawable/default_pic" />

        <TextView
            android:id="@+id/tv_send_gift_my_diamonds"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/px30_dp"
            android:gravity="center"
            android:text="钻石余额：1111111"
            android:textColor="@color/color_C7C7C7"
            android:textSize="@dimen/px36_sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider" />

    <TextView
        android:id="@+id/btn_diamond_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px130_dp"
        android:gravity="center"
        android:text="@string/dlg_send_ok"
        android:textColor="@color/pink"
        android:textSize="@dimen/px45_sp" />
</LinearLayout>