<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <include layout="@layout/base_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color"
        android:orientation="vertical"
        android:padding="30dp">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="10dp"
            android:text="@string/txt_logname"
            android:textColor="@color/hei_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_about_vers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="@string/txt_vers_def"
            android:textColor="@color/filter_text_gray_color" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_email_desc"
                    android:textColor="@color/text_ciyao_gray"
                    android:textSize="@dimen/txt_small" />
                <TextView
                    android:id="@+id/txt_about_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_email"
                    android:layout_marginLeft="@dimen/px20_dp"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/txt_small" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px20_dp"
                android:layout_marginTop="@dimen/px20_dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_customerservice_phone"
                    android:textColor="@color/text_ciyao_gray"
                    android:textSize="@dimen/txt_small" />

                <TextView
                    android:id="@+id/tv_customerservice_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px20_dp"
                    android:text="9999-9999999999"
                    android:textColor="@color/txt_customerservice_phone"
                    android:textSize="@dimen/px38_sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px10_dp"
                    android:text="(09:30-20:30)"
                    android:textColor="@color/text_ciyao_gray"
                    android:textSize="@dimen/px38_sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_customerservice_qq"
                    android:textColor="@color/text_ciyao_gray"
                    android:textSize="@dimen/txt_small" />

                <LinearLayout
                    android:id="@+id/ll_open_qq_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px40_dp"
                    android:background="@drawable/f1_btn_getqq_bg"
                    android:orientation="horizontal"
                    android:padding="@dimen/px10_dp">

                    <ImageView
                        android:layout_width="@dimen/px50_dp"
                        android:layout_height="@dimen/px50_dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/f1_qq_ico" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/px15_dp"
                        android:text="@string/txt_qq_desc"
                        android:textSize="@dimen/px38_sp" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_about_copyright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="@string/txt_copyright"
                android:textColor="@color/filter_text_gray_color" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>