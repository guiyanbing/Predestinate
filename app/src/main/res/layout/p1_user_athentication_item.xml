<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:id="@+id/user_athentication_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1_dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/px54_dp"
        android:paddingBottom="@dimen/px54_dp"
        android:paddingLeft="@dimen/px54_dp"
        android:paddingRight="@dimen/px47_dp"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <TextView
            android:id="@+id/user_txv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/px48_sp"
            android:textColor="@color/color_zhuyao"
            android:text="测试"/>
        <ImageView
            android:id="@+id/user_img_go"
            android:layout_width="@dimen/px42_dp"
            android:layout_height="@dimen/px27_dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/y1_go_ico"/>
        <TextView
            android:id="@+id/user_tev_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/user_img_go"
            android:layout_marginRight="@dimen/px42_dp"
            android:textSize="@dimen/px42_sp"
            android:textColor="@color/color_B0B0B0"
            android:text="测试未认证"/>
    </RelativeLayout>

</LinearLayout>