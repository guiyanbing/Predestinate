    </style>

    <!-- 轮播指示点 -->
    <style name="pointsview_point">
        <item name="android:layout_width">@dimen/px20_dp</item>
        <item name="android:layout_height">@dimen/px20_dp</item>
        <item name="android:layout_margin">@dimen/px10_dp</item>
        <item name="android:background">@drawable/bg_slide_point</item>
    </style>

    <!--Activity弹出框样式-->
    <style name="No_Background">
